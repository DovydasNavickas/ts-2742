{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "outDir": "dist",
        "rootDir": "src",
        "jsx": "react",
        "inlineSourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "esModuleInterop": true
    }
}
